<% include master_header %>
<section id="lyt-signin" class="default-wrapper">
  <div class="wrapper-outer"><div class="wrapper-inner">
    <div class="container">
      <div class="row"><div class="col-sm-4 col-sm-offset-4">
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <form action="/signup" method="POST">
          <h4>Psst ... Count me in ...</h4>
          <div class="form-group">
            <input name="email" type="text" class="form-control" id="txt-username" placeholder="Username" autocomplete="off">
          </div>
          <div class="form-group">
            <input name="password" type="password" class="form-control" id="txt-password" placeholder="Password" autocomplete="off">
          </div>
          <button id="btn-submit" type="submit" class="btn btn-block btn-sfox">Submit</button>
        </form>
        <div class="misc-link">
          <a href="/">Back to den</a>
        </div>
      </div></div>
    </div>
  </div></div>
  <img class="logo" src="/images/logo_vhalf.png" />
</section>
<% include master_footer %>
